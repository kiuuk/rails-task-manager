<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" name="<%= task.id %>" <%= task.completed ? 'checked' : "" %>>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "🗑️", delete_task_path(task) %>
    </li>
  <% end %>
</ul>

<div class="link">
  <%= link_to "Add a new task", new_task_path %>
</div>
